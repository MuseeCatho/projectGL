<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
 
<hibernate-mapping>
    <class name="mapping.Category" table="category">
        <id name="id" type="java.lang.Integer">
            <column name="id" />
            <generator class="identity" />
        </id>
    
        <property name="name_f" type="string">
            <column name="name_f" length="40" not-null="false"/>
        </property>
        <property name="name_e" type="string">
            <column name="name_e" length="40" not-null="false"/>
        </property>
        <property name="link_category" type="string">
            <column name="link_category" length="40" not-null="false" />
        </property>

    </class>
</hibernate-mapping>